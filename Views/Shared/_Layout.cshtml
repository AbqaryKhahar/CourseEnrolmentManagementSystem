<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UPTM</title>
    <!-- Vapor Theme from Bootswatch -->
    <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementAPI.styles.css" asp-append-version="true" />
    <style>
        /* Additional styling to enhance visual appeal */
        body {
            background: linear-gradient(120deg, #1e1e2e, #121212);
            color: #f8f9fa;
        }
        .navbar {
            background: rgba(0, 0, 0, 0.8);
            border-bottom: 3px solid #6c757d;
        }
        .navbar-brand {
            font-size: 1.5rem;
            text-shadow: 1px 1px 5px #000;
        }
        .nav-link:hover {
            text-decoration: underline;
            color: #ffd700 !important;
        }
        .container {
            background: rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }
        footer {
            background: rgba(0, 0, 0, 0.9);
            border-top: 3px solid #6c757d;
        }
        footer a:hover {
            text-decoration: underline;
            color: #ffd700 !important;
        }
        footer span.text-white {
            text-shadow: 1px 1px 3px #000;
        }
        button.navbar-toggler {
            border: 1px solid #fff;
        }
        button.navbar-toggler:hover {
            background-color: #212529;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">UPTM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Students" asp-action="Index">Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Courses" asp-action="Index">Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Home" asp-action="ViewReport">Report</a>
                        </li>
                        <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center py-3 text-muted bg-dark">
        <div class="container">
            &copy; 2024 - <span class="text-white">StudentManagementAPI</span> - <a class="text-decoration-none text-light" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
